<h1>Listing <%= current_doctor.name %>'s Patients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number of entries</th>
      <th>Number of comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= link_to "#{patient.name}", patient, {:style=>'color:red;', :class => "css_class"} %></td>
        <td><%= patient.journals.size %></td>
        <td><%= patient.number_comments %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>