<p id="notice"><%= notice %></p>

<h1>Listing Comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Journal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= comment.journal %></td>
        <td><%= link_to 'Show', patient_journal_comment_path(comment.journal.patient, comment.journal, comment) %></td>
        <td><%= link_to 'Edit', edit_patient_journal_comment_path(comment.journal.patient, comment.journal, comment) %></td>
        <td><%= link_to 'Destroy', "/patients/#{comment.journal.patient.id}/journals/#{comment.journal.id}/comments/#{comment.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_patient_journal_comment_path %>
